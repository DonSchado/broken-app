
<%= simple_form_for([current_user, @post || current_user.posts.new], html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'To all the people!', class: 'btn btn-primary' %>
  </div>
<% end %>

